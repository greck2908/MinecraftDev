        <localInspection displayName="Invalid injector method signature"
                         shortName="InvalidInjectorMethodSignature"
                         groupName="Mixin"
                         language="JAVA"
                         enabledByDefault="true"
                         level="ERROR"
                         hasStaticDescription="true"
