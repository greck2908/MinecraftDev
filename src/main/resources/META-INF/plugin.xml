        <localInspection displayName="Duplicate @Interface prefix in @Implements"
                         shortName="DuplicateInterfacePrefix"
                         groupName="Mixin"
                         language="JAVA"
                         enabledByDefault="true"
                         level="ERROR"
                         hasStaticDescription="true"
